/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
struct clock_data
{
	uint8_t hours;
	uint8_t minutes;
	uint8_t seconds;
	uint8_t counter_1s;
};

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

TIM_HandleTypeDef htim9;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */

struct clock_data my_clock;

TextLCDType myLCD;

uint16_t callback_occured = 0;

volatile uint8_t button_pressed = 0;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
