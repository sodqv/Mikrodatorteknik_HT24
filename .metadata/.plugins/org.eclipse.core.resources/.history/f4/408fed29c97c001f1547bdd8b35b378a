void HAL_ADC_ConvCpltCallback(ADC_HandleTypeDef *hadc)
{
	if (hadc -> Instance == ADC1)
	{
		callback_occured = 1;

		adc_buffer[adc_buf_ix] = HAL_ADC_GetValue(hadc);
		adc_buf_ix = (adc_buf_ix + 1) % ADC_BUF_SIZE;

	}
}


